<h1>新規投稿</h1>

<%= form_with model: @post_image, local: true do |f| %>
  <div class="field">
    <%= f.label :image, "画像" %><br>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :facilities_name, "施設名" %><br>
    <%= f.text_field :facilities_name %>
  </div>

  <div class="field">
    <%= f.label :caption, "説明" %><br>
    <%= f.text_area :caption %>
  </div>

  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>