<!-- app/views/admin/post_images/index.html.erb -->
<h1>投稿一覧（管理者）</h1>
<% @post_images.each do |post_image| %>
  <div>
    <%= image_tag post_image.image if post_image.image.attached? %>
    <p><%= post_image.caption %></p>
    <%= link_to '削除', admin_post_image_path(post_image), method: :delete, data: { confirm: "本当に削除しますか？" } %>
  </div>
<% end %>