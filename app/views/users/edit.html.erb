<div class="container mt-5" style="max-width: 600px;">
  <div class="card shadow-sm">
    <div class="card-header">
      <h4 class="mb-0">プロフィール編集</h4>
    </div>
    <div class="card-body">
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像" %><br>
          <% if @user.profile_image.attached? %>
            <div class="mb-2">
              <%= image_tag @user.get_profile_image(100, 100), class: "rounded-circle" %>
            </div>
          <% end %>
          <%= f.file_field :profile_image, class: "form-control-file" %>
        </div>

        <div class="d-flex justify-content-between mt-4">
          <%= f.submit "更新する", class: "btn btn-primary" %>
          <%= link_to "マイページに戻る", user_path(@user), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>